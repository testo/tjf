{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Customer Schema",
    "description": "The schema that contains information about the customer",
    "default": {},
    "examples": [
        {
            "City": "79822 Titisee-Neustadt",
            "Country": "Germany",
            "CustomerNumber": "",
            "Email": "info@testo.de",
            "Fax": "+49 7653 681-701",
            "Homepage": "www.testo.com",
            "Logo": "0d1ad806-d5e0-40c3-b77d-273e7b00344e.jpg",
            "Name": "t400 Video Shooting Corp.",
            "PersonOfContact": "PM Tobias",
            "Phone": "+49 7653 681-700",
            "Street": "Celsiusstraße 2",
            "type": "Contact",
            "uuid": "4a3b9363-7583-49cd-8cc9-9c45c81d3cdc"
        }
    ],
    "required": [
        "Name",
        "uuid"
    ],
    "additionalProperties": true,
    "properties": {
        "City": {
            "$id": "#/properties/City",
            "type": "string",
            "title": "City",
            "description": "The name of the city.",
            "default": "",
            "examples": [
                "79822 Titisee-Neustadt"
            ]
        },
        "Country": {
            "$id": "#/properties/Country",
            "type": "string",
            "title": "Country",
            "description": "The country where the company/customer is located.",
            "default": "",
            "examples": [
                "Germany"
            ]
        },
        "CustomerNumber": {
            "$id": "#/properties/CustomerNumber",
            "type": "integer",
            "title": "Customer number",
            "description": "The customer number.",
            "default": "",
            "examples": [
                ""
            ]
        },
        "Email": {
            "$id": "#/properties/Email",
            "type": "string",
            "title": "Email",
            "description": "The email of the customer/company.",
            "default": "",
            "examples": [
                "info@testo.de"
            ]
        },
        "Fax": {
            "$id": "#/properties/Fax",
            "type": "string",
            "title": "Fax",
            "description": "The fax number of the customer/company",
            "default": "",
            "examples": [
                "+49 7653 681-701"
            ]
        },
        "Homepage": {
            "$id": "#/properties/Homepage",
            "type": "string",
            "title": "Homepage",
            "description": "The homepage of the customer/company.",
            "default": "",
            "examples": [
                "www.testo.com"
            ]
        },
        "Logo": {
            "$id": "#/properties/Logo",
            "type": "string",
            "title": "Logo",
            "description": "The filename of the logo.",
            "default": "",
            "examples": [
                "0d1ad806-d5e0-40c3-b77d-273e7b00344e.jpg"
            ]
        },
        "Name": {
            "$id": "#/properties/Name",
            "type": "string",
            "title": "Name",
            "description": "The name of the customer/company.",
            "default": "",
            "examples": [
                "t400 Video Shooting Corp."
            ]
        },
        "PersonOfContact": {
            "$id": "#/properties/PersonOfContact",
            "type": "string",
            "title": "Person of contact",
            "description": "The person of contact.",
            "default": "",
            "examples": [
                "PM Tobias"
            ]
        },
        "Phone": {
            "$id": "#/properties/Phone",
            "type": "string",
            "title": "Phone number",
            "description": "The phone number of the customer/company.",
            "default": "",
            "examples": [
                "+49 7653 681-700"
            ]
        },
        "Street": {
            "$id": "#/properties/Street",
            "type": "string",
            "title": "Street",
            "description": "The street where the company is located.",
            "default": "",
            "examples": [
                "Celsiusstraße 2"
            ]
        },
        "type": {
            "$id": "#/properties/type",
            "type": "string",
            "title": "Type",
            "default": "",
            "examples": [
                "Contact"
            ]
        },
        "uuid": {
            "$id": "#/properties/uuid",
            "type": "string",
            "title": "UUID",
            "description": "The UUID of the customer.",
            "default": "",
            "examples": [
                "4a3b9363-7583-49cd-8cc9-9c45c81d3cdc"
            ]
        }
    }
}